mixin alert-success (time)
	- if (messages.success)
		.message.info
			div(
				class="alert alert-success", 
				role="alert", 
				data-time="5000", 
				show-alert ) #{messages.success} <span class="close-alert">X</span>
				
mixin alert-error (time)
	- if (messages.error)
		.message.info
			div(
				class="alert alert-danger", 
				role="alert", 
				data-time="5000", 
				show-alert ) #{messages.error} <span class="close-alert">X</span>