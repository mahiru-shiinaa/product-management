extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
	.container.my-3
		include ../../partials/list-btn-users.pug

		.row
			.col-12
				+box-head("Chat")
				.row.mb-3
			.col-12
				a(href="/rooms-chat/create" class="btn btn-sm btn-success mb-2") Tạo phòng chat

		.row
			.col-6
				div(class="box-room")
					div(class="inner-avatar")
						img(src="https://robohash.org/hicveldicta.png" alt="Phòng abc")
					div(class="inner-info")
						div(class="inner-name") Phòng abc
						div(class="inner-buttons")
							a(href="#" class="btn btn-sm btn-primary me-1") Nhắn tin
							a(href="#" class="btn btn-sm btn-danger") Xoa phòng