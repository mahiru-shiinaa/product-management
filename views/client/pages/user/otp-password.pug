extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
	+alert-error(5000)

	.container.my-5
		.row.justify-content-center
			.col-8
				h1(class="text-center") Nhập mã OTP xác thực
				form(action="/user/password/otp" method="POST")
					.mb-3
						label.form-label(for="email") Email
						input(
							type="email"
							class="form-control"
							id="email"
							name="email"
							value=email
							readonly
							required
						)
					.mb-3
						label.form-label(for="otp") Mã OTP
						input(
							type="text"
							class="form-control"
							id="otp"
							name="otp"
							required
						)
					.mb-3
						button(type="submit" class="btn btn-primary btn-block") Xác nhận