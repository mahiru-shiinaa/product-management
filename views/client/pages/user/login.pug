extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)

  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đăng nhập tài khoản
        form(action="/user/login" method="POST")
          .mb-3
            label.form-label(for="email") Email
            input(
              type="email"
              class="form-control"
              id="email"
              name="email"
              required
            )
          .mb-3
            label.form-label(for="password") Mật khẩu
            input(
              type="password"
              class="form-control"
              id="password"
              name="password"
              required
            )
          .mb-3
            button(type="submit" class="btn btn-primary btn-block") Đăng nhập