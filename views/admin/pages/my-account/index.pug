extends ../../layouts/default.pug

block main
  h1(class="mb-4") Thông tin cá nhân

  if (account.avatar)
    img(src=account.avatar width="150px" class="mb-3")
  else
    img(src="/admin/images/avatar.png" width="150px" class="mb-3")

  if (account.fullName)
    p Họ tên: #{account.fullName}

  if (account.email)
    p Email: #{account.email}

  if (account.phone)
    p Số điện thoại: #{account.phone}

  p
    span Trạng thái:
    span #{account.status === "active" ? "Hoạt động" : "Dừng hoạt động"}

  if (role.title)
    p Phân quyền: <b>#{role.title}</b>

  a(href=`${prefixAdmin}/my-account/edit` class="btn btn-primary") Chỉnh sửa thông tin